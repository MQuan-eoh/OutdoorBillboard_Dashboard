{
    "name":  "its-outdoor-billboard-app",
    "version":  "1.0.1",
    "description":  "Mini Desktop App for 384x384 LED Outdoor Billboard Display",
    "author":  "EoH Company",
    "main":  "main.js",
    "scripts":  {
                    "start":  "electron .",
                    "dev":  "npm run build:renderer \u0026\u0026 electron . --dev",
                    "build:renderer":  "tsc \u0026\u0026 node build-renderer.js",
                    "restart":  "taskkill /f /im electron.exe 2\u003enul \u0026 timeout /t 2 \u0026 npm run dev",
                    "kill":  "taskkill /f /im electron.exe 2\u003enul",
                    "clean-start":  "taskkill /f /im electron.exe 2\u003enul \u0026 taskkill /f /im node.exe 2\u003enul \u0026 timeout /t 2 \u0026 npm run dev",
                    "build":  "electron-builder",
                    "build:win":  "electron-packager . ITS-Billboard --out=dist --overwrite --icon=assets/icon --win --arch=x64",
                    "build:nsis":  "electron-builder --win nsis",
                    "build:portable":  "electron-builder --win portable",
                    "build:all": "electron-builder --win",
                    "pack":  "electron-packager . --platform=win32 --arch=x64 --out=dist/ --overwrite",
                    "dist":  "npm run pack",
                    "prepare-release": "npm run build:renderer && npm run build:nsis",
                    "publish-release": "electron-builder --win --publish=always"
                },
    "devDependencies":  {
                            "@types/node":  "^20.0.0",
                            "@types/react":  "^18.0.0",
                            "@types/react-dom":  "^18.0.0",
                            "electron":  "^25.0.0",
                            "electron-builder":  "^24.6.4",
                            "electron-packager":  "^17.1.2",
                            "typescript":  "^5.0.0",
                            "vite":  "^4.0.0"
                        },
    "dependencies":  {
                         "axios":  "^1.0.0",
                         "electron-updater":  "^6.0.0",
                         "mqtt":  "^5.0.0",
                         "node-cron":  "^3.0.0",
                         "react":  "^18.0.0",
                         "react-dom":  "^18.0.0",
                         "zustand":  "^4.0.0"
                     },
    "build":  {
                  "appId":  "com.its.outdoor-billboard",
                  "productName":  "ITS Outdoor Billboard",
                  "directories":  {
                                      "output":  "dist"
                                  },
                  "asar":  false,
                  "files":  [
                                "main.js",
                                "preload.js",
                                "renderer/**/*",
                                "package.json"
                            ],
                  "win":  {
                              "target":  [
                                             {
                                                 "target":  "nsis",
                                                 "arch":  [
                                                              "x64"
                                                          ]
                                             },
                                             {
                                                 "target":  "portable",
                                                 "arch":  [
                                                              "x64"
                                                          ]
                                             }
                                         ],
                              "requestedExecutionLevel":  "asInvoker"
                          },
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true,
                               "createDesktopShortcut":  true,
                               "createStartMenuShortcut":  true,
                               "shortcutName":  "ITS Billboard"
                           },
                  "portable":  {
                                   "artifactName":  "ITS-Billboard-${version}-portable.exe"
                               },
                  "publish":  {
                                  "provider":  "github",
                                  "owner":  "MinhQuan7",
                                  "repo":  "ITS_OurdoorBillboard-"
                              },
                  "extraMetadata":  {
                                        "main":  "main.js"
                                    }
              }
}
